<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/btype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="enter book name&apos;" />

    <EditText
        android:id="@+id/btitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btype"
        android:layout_below="@+id/btype"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="enter book title" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btitle"
        android:layout_below="@+id/btitle"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="publisher" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="show data"
        android:onClick="show" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="save" 
        android:onClick="save"/>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Mainactivity" >

       

        		<CheckedTextView android:id="@+id/display"
        			android:layout_width="64dp" android:layout_height="100dp"
        			android:layout_alignParentEnd="true"
        			android:layout_alignParentStart="true"
        			android:checked="false" android:gravity="bottom|right|fill"
        			android:text="abc"
        			android:textAppearance="?android:attr/textAppearanceLarge" />

        		<Button android:id="@+id/btn1"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignParentStart="true"
        			android:layout_below="@+id/display"
        			android:layout_gravity="bottom"
        			android:text="1" android:textSize="32sp" />

        		<Button android:id="@+id/btn2"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignBottom="@+id/btn1"
        			android:layout_gravity="bottom"
        			android:layout_toEndOf="@+id/btn1"
        			android:text="2" android:textSize="32sp" />

        		<Button android:id="@+id/btn3"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignBottom="@+id/btn2"
        			android:layout_gravity="bottom"
        			android:layout_toEndOf="@+id/btn2"
        			
        			android:text="3" android:textSize="32sp" />

        		<Button
        		    android:id="@+id/clear"
        		    android:layout_width="wrap_content"
        		    android:layout_height="80dp"
        		    android:layout_alignParentEnd="true"
        		    android:layout_alignTop="@+id/btn3"
        		    android:layout_gravity="bottom"
        		    android:layout_toEndOf="@+id/btn3"
        		    android:text="C"
        		    android:textSize="32sp" />

        		<Button android:id="@+id/btn4"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignParentStart="true"
        			android:layout_below="@+id/btn1"
        			android:layout_gravity="bottom"
        			android:layout_toStartOf="@+id/btn2"
        			
        			android:text="4" android:textSize="32sp" />

        		<Button android:id="@+id/btn5"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignTop="@+id/btn4"
        			android:layout_gravity="bottom"
        			android:layout_toEndOf="@+id/btn4"
        			android:text="5" android:textSize="32sp" />

        		<Button android:id="@+id/btn6"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignTop="@+id/btn5"
        			android:layout_gravity="bottom"
        			android:layout_toEndOf="@+id/btn5"
        			android:text="6" android:textSize="32sp" />

        		<Button android:id="@+id/btn7"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignParentStart="true"
        			android:layout_below="@+id/btn4"
        			android:layout_gravity="bottom"
        			android:text="7"
        			 android:textSize="32sp" />

        		<Button android:id="@+id/btn9"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignEnd="@+id/btn6"
        			android:layout_below="@+id/btn5"
        			android:layout_gravity="bottom"
        			android:text="9" android:textSize="32sp" />

        		<Button android:id="@+id/add2"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignParentEnd="true"
        			android:layout_alignStart="@+id/clear"
        			android:layout_alignTop="@+id/btn6"
        			android:layout_gravity="bottom"
        			android:text="+" android:textSize="32sp" />

        		<Button android:id="@+id/btn8"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignBottom="@+id/btn7"
        			android:layout_gravity="bottom"
        			android:layout_toEndOf="@+id/btn7"
        			android:text="8" android:textSize="32sp" />

        		<Button android:id="@+id/mul"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignParentEnd="true"
        			android:layout_alignStart="@+id/add2"
        			android:layout_below="@+id/btn6"
        			android:layout_gravity="bottom"
        		
        			android:text="X" android:textSize="32sp" />

        		<Button android:id="@+id/dot"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp" android:layout_below="@+id/btn7"
        			android:layout_gravity="bottom"
        			android:layout_toStartOf="@+id/btn8"
        		
        			android:text="." android:textSize="32sp" />

        		<Button android:id="@+id/btn0"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignBottom="@+id/dot"
        			android:layout_gravity="bottom"
        			android:layout_toStartOf="@+id/btn9"
        			android:text="0" android:textSize="32sp" />

        		<Button android:id="@+id/equals"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp" android:layout_below="@+id/btn9"
        			android:layout_gravity="bottom"
        			android:layout_toEndOf="@+id/btn8"
        			android:text="=" android:textSize="32sp" />

        		<Button android:id="@+id/divide"
        			android:layout_width="wrap_content"
        			android:layout_height="80dp"
        			android:layout_alignParentEnd="true"
        			android:layout_alignStart="@+id/mul"
        			android:layout_alignTop="@+id/equals"
        			android:layout_gravity="bottom"
        			
        			android:text="รท " android:textSize="32sp" />

        	</RelativeLayout>